cmd open ${{
    case $(file --mime-type "$f" -bL) in
        text/*|application/json) $EDITOR "$f";;
        *) xdg-open "$f" ;;
    esac
}}

# Basic Settings
set preview true
set hidden true
set ignorecase true
set icons true

# borders between separate directories
set drawbox true

# Custom Functions
cmd mkdir ${{
  printf "Directory Name: "
  read ans
  mkdir $ans
}}

cmd mkfile ${{
  printf "File Name: "
  read ans
  $EDITOR $ans
}}

cmd setwallpaper ${{
    cp "$f" ~/.config/wall.jpg
    xwallpaper --zoom "$f"
    betterlockscreen -u "$f" --fx
}}

# Archive bindings
cmd unarchive ${{
  case "$f" in
      *.zip) unzip "$f" ;;
      *.tar.gz) tar -xzvf "$f" ;;
      *.tar.bz2) tar -xjvf "$f" ;;
      *.tar) tar -xvf "$f" ;;
      *) echo "Unsupported format" ;;
  esac
}}

# Trash bindings
cmd trash ${{
  files=$(printf "$fx" | tr '\n' ';')
  while [ "$files" ]; do
    file=${files%%;*}

    trash-put -i "$(basename "$file")"
    if [ "$files" = "$file" ]; then
      files=''
    else
      files="${files#*;}"
    fi
  done
}}

cmd clear_trash %trash-empty -i

cmd restore_trash ${{
  trash-restore
}}

# Bindings
map d
map m

map c $vscodium "$f"

map au unarchive
map ae $wine "$f"

# Basic Functions
map . set hidden!
map dd trash
map dr restore_trash
map dc clear_trash
map p paste
map x cut
map y copy
map <enter> open
map R reload
map r rename
map mf mkfile
map md mkdir
map bg setwallpaper
map C clear

# Movement
map gD cd ~/Documents
map gd cd ~/Downloads
map gp cd ~/Pictures
map gc cd ~/.config
map glf cd ~/.config/lf/
map gh cd ~/Documents/GitHub
map gv cd ~/Videos
map gb cd ~/.local/bin
map gt cd ~/.local/share/Trash/files
map gH cd ~
map gn cd ~/Documents/GitHub/my_linux_configs/linux_distro_configs/arch_linux_configs/hyprland_wm/


